# Linkup Integration Service Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Service Configuration
# ============================================================================
PORT=8007
HOST=0.0.0.0
LOG_LEVEL=INFO

# ============================================================================
# Linkup API Configuration
# ============================================================================
# Get your API key from: https://linkup.so
# Leave empty to use mock mode (for testing without API key)
LINKUP_API_KEY=

# Default search depth: standard or deep
LINKUP_SEARCH_DEPTH=deep

# Maximum results per search
LINKUP_MAX_RESULTS=10

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/synthetic_db

# Connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
# Use * for development, specific domains for production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_EVIDENCE_PACK=true
ENABLE_EDIT_CHECK_GENERATOR=true
ENABLE_COMPLIANCE_WATCHER=true

# ============================================================================
# Compliance Watcher Configuration
# ============================================================================
# How far back to look for updates (in days)
COMPLIANCE_LOOKBACK_DAYS=30

# Scan frequency (hours)
COMPLIANCE_SCAN_FREQUENCY=24

# Regulatory sources to monitor (comma-separated)
REGULATORY_SOURCES=FDA,ICH,CDISC,TransCelerate,EMA

# ============================================================================
# Notification Configuration
# ============================================================================
# Slack webhook URL for compliance alerts
SLACK_WEBHOOK_URL=

# Email configuration for alerts
ALERT_EMAIL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# ============================================================================
# GitHub Integration (for automated PRs)
# ============================================================================
GITHUB_TOKEN=
GITHUB_REPO=yourorg/synthetictrial-rules
GITHUB_BASE_BRANCH=main

# ============================================================================
# Cache Configuration (Optional - Redis)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache TTL for search results (seconds)
CACHE_TTL=3600

# ============================================================================
# Security Configuration
# ============================================================================
# JWT secret for authentication (if using auth)
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256

# API rate limiting
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# Development/Testing
# ============================================================================
# Set to true to enable debug mode
DEBUG=false

# Set to true to use mock Linkup responses
MOCK_MODE=false

# Test tenant ID
TEST_TENANT_ID=tenant_test
